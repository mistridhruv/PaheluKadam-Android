<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#153d82" /> <!-- light gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
